@model MagicVilla.Web.Models.VillaNumber.VillaNumberCreateDto

<form asp-action="CreateVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa</h1>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="col-2">
                <label asp-for="VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNo" class="form-control" />
                <span asp-validation-for="VillaNo" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaId" class="control-label pt-2" style="font-size:20px;">Villa</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaId" class="form-select" asp-items="@ViewBag.ListVilla">
                    <option disabled selected>--Select Villa--</option>
                </select>

                <span asp-validation-for="VillaId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="SpecialDetails" class="form-control" rows="5"> </textarea>
                <span asp-validation-for="SpecialDetails" class="text-danger"></span>
            </div>


            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn btn-primary form-control">Back</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}