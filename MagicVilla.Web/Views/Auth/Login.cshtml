@model MagicVilla.Web.Models.User.LoginDto

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Login</h1>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" class="form-control" type="text" placeholder="Username...." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" class="form-control"  type="text" placeholder="Password...." />

            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="submit">Login</button>

            </div>
            
        </div>

       
        

    </div>
     
    

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}